.bold {font-weight: bold;}
#sidebar {
	width: 240px;
	float: left;
}
#browse-sub {
	width: 216px;
	padding: 8px;
	margin-bottom: 6px;
	background: #fffdef;
	border-radius: 12px;
	-webkit-border-radius: 12px;
	-moz-border-radius: 12px;
	border: 1px solid #6d6c63;
}
.gradientborder {
	background-image: -webkit-gradient(
	    linear,
	    left bottom,
	    left top,
	    color-stop(0.25, rgb(255,253,239)),
	    color-stop(0.63, rgb(154,149,132))
	);
	background-image: -moz-linear-gradient(
	    center bottom,
	    rgb(255,253,239) 25%,
	    rgb(154,149,132) 63%
	);
	padding: 1px;
	display: none;
}
.menu_segment {

}
.menu_segment a:link, .menu_segment a:visited {
text-decoration: none;

}
.menu_segment a:hover {
text-decoration: underline;

}
.menu_segment ul {
	list-style-type: none;
	color: #9a9584;
	font-size: .80em;
	padding: 8px;
	background: #fffdef;
}
.menu_segment ul.subcategories {
	font-size: .8em;
	padding: 0 8px 0 12px;
}
.menu_segment ul a {
	color: #9a9584;
}
.menu_segment ul li {
	margin: 2px;	
}
.menu_segment ul li.filterclear {
	margin: 4px;
	font-size: .70em;
}
.menu_segment ul li.filterclear a {
	text-decoration: underline;
	cursor: pointer;
}
.menu_segment ul li input {
	margin: 4px;
}
.menu_segment ul.loginul li input {
	background: #fff;
	padding: 2px 1px 1px 4px;
	width: 100px;
	border: solid 1px #bcbbbb;
	outline: none;
	-webkit-border-radius: 2em;
	-moz-border-radius: 2em;
	border-radius: 2em;
}
.menu_segment ul li input.submit {
	color: #fff;
	border: solid 1px #494949;
	font-size: 11px;
	font-family: Arial, Helvetica, sans-serif;
	height: 20px;
	width: 40px;
	text-shadow: 0 1px 1px rgba(0, 0, 0, 0.6);
	-webkit-border-radius: 2em;
	-moz-border-radius: 2em;
	border-radius: 2em;
	background: #5f5f5f;
	background: -webkit-gradient(linear, left top, left bottom, from(#9e9e9e), to(#454545));
	background: -moz-linear-gradient(top, #9e9e9e, #454545);
	cursor: pointer;
}
.menu_segment h4 {
	background: #9a9584 url("../m/menu_arrow_closed.png") no-repeat 200px 5px;
	color: #fffdef;
	text-align: center;
	text-transform: uppercase;
	font-size: .75em;
	border-top-left-radius: 12px 12px;
	border-top-left-radius: 12px 12px;
	border-top-right-radius: 12px 12px;
	border-top-right-radius: 12px 12px;
	padding: 4px;
	cursor: pointer;
}
.menu_segment h4.open {
	background: #9a9584 url("../m/menu_arrow_open.png") no-repeat 195px 3px;
}

.menu_segment div.open {
	display: block;
}
.menu_segment .menu_h4_account ul.loginul li {
	text-align: right;
}
.menu_segment .menu_h4_account ul.loginul li a {
	font-size: .8em;
}
.pagination {
	margin: 8px;
	font-size: .8em;
	color: black;
}